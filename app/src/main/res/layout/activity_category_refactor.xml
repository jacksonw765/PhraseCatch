<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryRefactor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Pick A Deck"
                android:textSize="30sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingRight="25dp"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/buttonCatagoryEverything"
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:background="@drawable/button_white"
                    android:elevation="5dp"
                    android:fontFamily="@font/nunito_font"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Everything"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/buttonCollegeLife"
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/button_white"
                    android:elevation="5dp"
                    android:fontFamily="@font/nunito_font"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="College Life"
                    android:textSize="30sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/middleCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="25dp"
                android:paddingTop="20dp"
                android:paddingRight="25dp"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/buttonSports"
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:background="@drawable/button_white"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Sports"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/Movies"
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/button_white"
                    android:elevation="5dp"
                    android:fontFamily="@font/nunito_font"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Movies/TV Shows"
                    android:textSize="30sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lowerCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="25dp"
                android:paddingTop="20dp"
                android:fontFamily="@font/nunito_font"
                android:paddingRight="25dp"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/buttonPlaces"
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:background="@drawable/button_white"
                    android:elevation="5dp"
                    android:fontFamily="@font/nunito_font"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Places"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonMusic"
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/button_white"
                    android:elevation="5dp"
                    android:fontFamily="@font/nunito_font"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Music"
                    android:textSize="30sp" />

            </RelativeLayout>
    </LinearLayout>
    </ScrollView>





</RelativeLayout>