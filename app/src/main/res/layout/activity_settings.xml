<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>

        <RelativeLayout
            android:id="@+id/layoutPoints"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_white"
            android:elevation="5dp"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="298dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito"
                android:text="Points to Win"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/textPointsToWin"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttonPlus"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11dp"
                android:ems="5"
                android:fontFamily="@font/nunito"
                android:inputType="number"
                android:text="6"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignEnd="@+id/textView2"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button_lightblue_circle"
                android:elevation="3dp"
                android:fontFamily="@font/nunito"
                android:text="+"
                android:textAlignment="center"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignTop="@+id/buttonPlus"
                android:background="@drawable/button_lightblue_circle"
                android:elevation="3dp"
                android:fontFamily="@font/nunito"
                android:text="-"
                android:textAlignment="center"
                android:textSize="36sp" />

        </RelativeLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>

        <RelativeLayout
            android:id="@+id/layoutTimer"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_alignStart="@+id/layoutPoints"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_white"
            android:elevation="5dp">

            <TextView
                android:id="@+id/textTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito"
                android:text="Timer Length"
                android:textSize="30sp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textTimer"
                android:layout_alignParentTop="true">


                <RadioButton
                    android:id="@+id/radioButtonOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textTimer"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="74dp"
                    android:fontFamily="@font/nunito"
                    android:text="Short"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radioButtonTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioButtonOne"
                    android:layout_alignStart="@+id/textTimer"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/nunito"
                    android:text="Mid"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radioButtonThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioButtonTwo"
                    android:layout_alignStart="@+id/textTimer"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/nunito"
                    android:text="Long"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radioButtonFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioButtonThree"
                    android:layout_alignStart="@+id/textTimer"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/nunito"
                    android:text="Random"
                    android:textSize="20sp" />
            </RadioGroup>
        </RelativeLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>

        <Button
            android:id="@+id/buttonRate"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/button_lightblue"
            android:elevation="5dp"
            android:fontFamily="@font/nunito"
            android:gravity="center"
            android:text="Rate"
            android:textSize="30sp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/buttonContact"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/button_lightblue"
            android:elevation="5dp"
            android:fontFamily="@font/nunito"
            android:gravity="center"
            android:text="Contact Us"
            android:textSize="30sp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </LinearLayout>
</ScrollView>